#include<iostream>
#include<fstream>
#include<string>
using namespace std;

int main()
{
    
    int ranges[8] = {0};
    
    // create a stream for the file
    ifstream inFile("Ch8_Ex4Data.txt");
    int testscores;
    string data = "";
    // extract data separated by ','
    while(getline(inFile, data, ','))
    {
        // convert data to integer testscores
        testscores = stoi(data);
        
        // process accordingly
        if(testscores < 25)
            ranges[0]++;
        else if(testscores < 50)
            ranges[1]++;
        else if(testscores < 75)
            ranges[2]++;
        else if(testscores < 100)
            ranges[3]++;
        else if(testscores < 125)
            ranges[4]++;
        else if(testscores < 150)
            ranges[5]++;
        else if(testscores < 175)
            ranges[6]++;
        else if(testscores <= 200)
            ranges[7]++;
    }
    // print the output accordingly
    cout<<endl<<"Results: "<<endl;
    for(int i = 0; i <=7; i++) {
        int r1 = i * 25, r2 = (i + 1) * 25 - 1;
        if(i == 7)
            r2++;
        cout<<"\t"<<" Numbers of student scored between "<<r1<<"-"<<r2<<": \t"<<ranges[i]<<endl;
    }
    // close the file
    inFile.close();
    return 0;
}


