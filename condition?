#include <iostream>

using namespace std;

int main()
{
 int x = 5;
 int y = 100;
 int z;
 z = (y / x > 0) ? x : y; //condition ? result1 : result2  (result1 = true-  -result2 = false
                                                              
                                                              
 // The conditional operator evaluates an expression, returning one value if that expression evaluates to true,
 // and a different one if the expression evaluates as false. Its syntax is: condition ? result1 : result2
 cout << z;




return 0;
}
